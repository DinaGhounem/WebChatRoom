<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisteredUsers</servlet-name>
        <servlet-class>servlets.RegisteredUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoggedUsers</servlet-name>
        <servlet-class>servlets.LoggedUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatRoomServlet</servlet-name>
        <servlet-class>servlets.ChatRoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayUsersServlet</servlet-name>
        <servlet-class>servlets.DisplayUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisteredUsers</servlet-name>
        <url-pattern>/RegisteredUsers</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>CheckSignup</filter-name>
        <filter-class>filters.CheckSignup</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckSignup</filter-name>
        <url-pattern>/RegisteredUsers</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CheckLogin</filter-name>
        <filter-class>filters.CheckLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckLogin</filter-name>
        <url-pattern>/LoggedUsers</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>LoggedUsers</servlet-name>
        <url-pattern>/LoggedUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatRoomServlet</servlet-name>
        <url-pattern>/ChatRoomServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayUsersServlet</servlet-name>
        <url-pattern>/DisplayUsersServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LoginForm.jsp</welcome-file>
    </welcome-file-list>
</web-app>
